<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/ImageForLoved"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cako_logo_image2" />

        <TextView
            android:id="@+id/textViewForItemNameInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:text="Black vellwet" />

        <TextView
            android:id="@+id/textViewForPieceInfoInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"
            android:text="1 per KG" />

        <TextView
            android:id="@+id/textViewForPriceInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="65dp"
            android:text="$120" />

        <Button
            android:id="@+id/buttonForAddToCartInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_baseline_shopping_cart_24"
            android:layout_marginTop="40dp"
            android:layout_marginStart="250dp"/>
        <TextView
            android:id="@+id/textViewForStaticDetailInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="105dp"
            android:text="Details:-"
            android:textSize="19sp"
            android:textColor="#364702"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/textViewForDynamicProductDetailInLoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Every cake we offer is handcrafted and since each chef has his/her own way of baking and designing a cake, there might be slight variation in the product in terms of design and shape."
            />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>